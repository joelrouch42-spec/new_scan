{
  "data_folder": "data",
  "backtest": {
    "candle_nb": 200,
    "interval": "1d",
    "data_source": "ibkr",
    "test_candle_start": 1,
    "test_candle_stop": 10
  },
  "realtime": {
    "candle_nb": 250,
    "interval": "1d",
    "update_interval_seconds": 60,
    "ibkr_host": "127.0.0.1",
    "ibkr_port": 4001,
    "ibkr_client_id": 2
  },
  "indicators": {
    "smc": {
      "enabled": true,
      "zigzag_length": 9,
      "fib_factor": 0.33
    },
    "support_resistance": {
      "enabled": true,
      "left_bars": 15,
      "right_bars": 15,
      "volume_threshold": 20,
      "show_breaks": true
    },
    "macd": {
      "enabled": true,
      "fast_length": 12,
      "slow_length": 26,
      "signal_length": 9
    }
  }
}
